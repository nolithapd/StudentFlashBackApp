<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentflashbackapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentFlashBackApp"
        android:windowSoftInputMode="adjustPan|adjustResize" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNewCard" android:label="Add New Card"> </activity>
        <activity android:name=".Front" android:label="Cards"> </activity>
        <activity android:name=".EditCard" android:label="Edit Cards"> </activity>

    </application>

</manifest>